{
    "name": "postal3script",
    "displayName": "Postal3Script",
    "description": "A Syntax Highlighter for Postal 3's Script files",
	"publisher": "Kizoky",
	"icon": "icons/Postal3.png",
    "version": "1.0.0",
	    "repository": {
        "type": "git",
        "url": "https://github.com/Kizoky/postal3script_vscode.git"
    },
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "postal3script",
            "aliases": ["Postal3Script", "postal3script"],
            "extensions": [".p3s"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "postal3script",
            "scopeName": "source.postal3script",
            "path": "./syntaxes/postal3script.tmLanguage.json"
        }]
    }
}