{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["Block begin", "Block end"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}",
            "notIn": ["comment", "string"]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": ["comment", "string"]
        },
        {
            "open": "begin",
            "close": "end",
            "notIn": ["comment", "string"]
        }
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["Block begin", "Block end"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "[{}]"
    }
}